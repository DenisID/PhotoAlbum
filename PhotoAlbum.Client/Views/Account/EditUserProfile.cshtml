@model PhotoAlbum.Client.Models.EditUserProfileViewModel

@using Resources

@{ 
    ViewBag.Title = Localization.UserProfile;
}

<h2>@ViewBag.Title</h2>

<hr />
<h4>@Localization.EditUserProfile</h4>
<hr />

@using (Html.BeginForm("EditUserProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">@Localization.Email</div>
        <div class="editor-field">
            <input type="text" name="Email" value="@Model.Email" />
        </div>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <br />

        <div class="editor-label">@Localization.FirstName</div>
        <div class="editor-field">
            <input type="text" name="FirstName" value="@Model.FirstName" />
        </div>
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        <br />

        <div class="editor-label">@Localization.LastName</div>
        <div class="editor-field">
            <input type="text" name="LastName" value="@Model.LastName" />
        </div>
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        <br />

        <span>
            <input type="submit" class="btn btn-default" value="@Localization.Save" />
        </span>
        <span>
            <a href="/@User.Identity.Name/profile" class = "btn btn-default">@Localization.Cancel</a>
        </span>
        <span>
            @ViewBag.ProfileResult
        </span>
        <br />
        <br />

    </fieldset>
}

<hr />
<h4>@Localization.ChangePassword</h4>
<hr />

