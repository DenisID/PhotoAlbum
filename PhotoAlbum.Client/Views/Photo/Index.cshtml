@model IEnumerable<PhotoAlbum.Client.Model.Entities.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Мои изображения</h2>

<p>
    @Html.ActionLink("Добавить изображение", "AddPhoto")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.PhotoContent.Image != null)
                {
                    <p>@item.Title</p>
                    @Html.Raw("<img style='width:300px; height:400px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.PhotoContent.Image) + "\" />")
                }
            </td>

            <td>
                @if (item.PhotoContent.Image != null)
                {
                    <p>@item.Description</p>
                }
            </td>

        </tr>
    }

</table>